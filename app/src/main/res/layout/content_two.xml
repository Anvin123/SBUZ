<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/paddingleft"
    android:padding="5dp"
    android:layout_height="match_parent">

    <TextView
        android:text="Total Number of Stops More "
        android:textColor="@color/sign"

        android:textSize="@dimen/s15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/numberofstops"
        android:text="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/sign"
        android:textSize="@dimen/s15"

        android:text="Current Stop Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/currentstop"
        android:text="Aluva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:textColor="@color/sign"

        android:text="Delay"
        android:textSize="@dimen/s15"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/delay"
        android:text="10mins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/sign"

        android:text="Balance Amount"
        android:textSize="@dimen/s15"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="₹430"
        android:id="@+id/balanceamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:textSize="@dimen/s15"
        android:textColor="@color/sign"
        android:text="Ticket Cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="₹130"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/black"
        android:textSize="@dimen/s18"

        android:gravity="center"
        android:text="Road Map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     />



</LinearLayout>